{
  "name": "Tab Statistics",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Count how many open tabs you have",

  "icons": {
  },

  "permissions": [
    "alarms",
    "tabs",
    "storage"
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "opentabs.js"
    ]
  },

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}